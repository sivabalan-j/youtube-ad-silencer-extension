{
  "manifest_version": 3,
  "name": "YouTube Ad Silencer",
  "version": "1.1",
  "description": "Mute, skip, and fast-forward YouTube ads with ON/OFF control.",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
